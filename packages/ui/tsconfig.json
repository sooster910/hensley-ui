{
  "include": ["src", "utils", "react-button", "base-ui", "lib"],
  "exclude": ["dist", "node_modules"],

  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@/*": ["./src/*"],
      "@hensley-ui/utils": ["./utils/src/index.ts"],
      "@hensley-ui/utils/*": ["./utils/src/*"],
      "@hensley-ui/react-button": ["./react-button/src/index.ts"],
      "@hensley-ui/react-button/*": ["./react-button/src/*"],
      "@hensley-ui/base-ui/*": ["./base-ui/src/*"]
    },

    "types": ["vitest/globals", "@testing-library/jest-dom"]
  }
}
