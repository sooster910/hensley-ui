{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "isolatedModules": true,
    "strict": true,

    "noEmit": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["./src", "test"],
  "exclude": ["./node_modules"]
}
