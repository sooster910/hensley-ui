{
  "name": "@hensley-ui/ui",
  "private": false,
  "version": "0.3.6",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.es.js",
  "style": "./dist/styles.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "CHANGELOG.md",
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "pnpm run build --watch",
    "build": "pnpm run clean  && vite build && pnpm run build:css",
    "build:css": "tailwindcss -i ./src/index.css -o ./dist/styles.css --minify",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "preview": "vite preview",
    "storybook": "concurrently 'pnpm run storybook:css' 'storybook dev -p 6006'",
    "build-storybook": "storybook build",
    "storybook:css": "tailwindcss -w -i ./src/index.css -o ./src/styles.css",
    "chromatic": "chromatic --exit-zero-on-changes",
    "ci:publish": "pnpm publish --access public",
    "test": "vitest"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@eslint/js": "^9.19.0",
    "@storybook/addon-essentials": "^8.5.3",
    "@storybook/addon-interactions": "^8.5.3",
    "@storybook/addon-onboarding": "^8.5.3",
    "@storybook/blocks": "^8.5.3",
    "@storybook/react": "^8.5.3",
    "@storybook/react-vite": "^8.5.3",
    "@storybook/test": "^8.5.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "chromatic": "^11.25.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.14.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.1",
    "prettier": "3.4.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^8.5.3",
    "tailwindcss": "3.3.5",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.21.0",
    "vite": "^6.0.5",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "@hensley-ui/react-button": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.474.0",
    "motion": "^12.0.6",
    "overlay-kit": "^1.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
